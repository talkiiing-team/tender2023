{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node"],
    "noEmit": true,
    "paths": {
      "@apps/*": ["./apps/*"],
      "@libs/*": ["./libs/*"]
    }
  },
  "include": ["./apps/**/*", "./libs/**/*"]
}
